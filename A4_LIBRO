CREATE TABLE A4_LIBRO(
    ISBN NUMBER(10) NOT NULL,
    DESCRIPCION VARCHAR2(1000) NOT NULL,
    PAGINA NUMBER(4) NOT NULL,
    Precio DECIMAL(4,2) CHECK (Precio BETWEEN 10.00 AND 99.00),
    CONSTRAINT PK_ISBN PRIMARY KEY(ISBN)
    );
    --modificadores
    
    ALTER TABLE A4_LIBRO ADD TITULO VARCHAR2(300) NOT NULL;
    ALTER TABLE A4_LIBRO RENAME COLUMN PAGINA TO NUMERO_PAGINAS;
    ALTER TABLE A4_LIBRO MODIFY PRECIO NUMBER(5, 2);
    ALTER TABLE A4_LIBRO MODIFY PRECIO CHECK(PRECIO >=0);
    
